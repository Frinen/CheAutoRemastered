@page "/Engines"
@inherits EnginePageModel

<h3>EnginePage</h3>

<h2>Engines.Count @Engines.Count</h2>

@if (Engines.Count != 0)
{
<table class="table table-hover mdc-table" style="margin:0px">
    <thead>
        <tr class="mdc-table-header-row ">
            <th>Name</th>
            <th>PistonsCount</th>
            <th>Power</th>
            <th>Torque</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var engine in Engines)
        {
        <tr class="c-pointer dashboard-table-row">
            <td>@engine.Name</td>
            <td>@engine.PistonsCount</td>
            <td>@engine.Power</td>
            <td>@engine.Torque</td>
            <td><button @onclick="@(() => Delete(engine.Id))">delete</button></td>
        </tr>
        }
    </tbody>
</table>
}